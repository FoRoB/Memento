<UserControl x:Class="Memento.Views.FlashcardsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memento.Views"
             xmlns:vm="clr-namespace:Memento.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:FlashcardsViewModel/>
    </UserControl.DataContext>
    
    <Border Background="#FF464F6B">
        <StackPanel>
            <!--с начала должна быть статистика-->
            <DockPanel LastChildFill="False">
                <TextBox Style="{StaticResource SearchBoxStyle}"
                         Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         DockPanel.Dock="Left"
                         Width="150"
                         Height="30"
                         Margin="10"/>
                <Button Style="{StaticResource AddButtonStyle}"
                        DockPanel.Dock="Right"
                        Width="24"
                        Height="24"
                        Margin="0 0 30 0"/>
            </DockPanel>
            <ListBox ItemsSource="{Binding FilterView}"
                     Style="{StaticResource FlashcardsListBoxStyle}"                     
                     HorizontalContentAlignment="Stretch"
                     Height="250"/>
        </StackPanel>
    </Border>
</UserControl>
